package thw.edu.javaII.port.warehouse.ui.panels;

import javax.swing.JPanel;
import javax.swing.JScrollPane;

import java.awt.BorderLayout;
import java.awt.Color;

import javax.swing.JLabel;
import javax.swing.JTable;

import thw.edu.javaII.port.warehouse.ui.common.Session;
import thw.edu.javaII.port.warehouse.ui.common.Communicator;
import thw.edu.javaII.port.warehouse.ui.model.BestandTableModel;

import java.awt.Font;

public class BestandPage extends JPanel {

    private static final long serialVersionUID = 2848864973063147806L;
    private JTable table;
    private BestandTableModel tableModel;
    private Communicator communicator; // Hinzuf√ºgen des Communicators

    public BestandPage(Session ses) {
        this.communicator = ses.getCommunicator();
        setLayout(new BorderLayout(0, 0));

        JLabel lblNewLabel = new JLabel("Lagerbestand");
        lblNewLabel.setFont(new Font("Lucida Grande", Font.BOLD, 16));
        add(lblNewLabel, BorderLayout.NORTH);
        tableModel = new BestandTableModel(communicator.getBestand());
        table = new JTable(tableModel);
        tableModel.setJTableColumnsWidth(table, 800, 10, 20, 20, 10, 20, 20);
        table.setShowGrid(true);
        table.setShowVerticalLines(true);
        table.setShowHorizontalLines(true);
        table.setGridColor(Color.DARK_GRAY);
        JScrollPane js = new JScrollPane(table);
        js.setVisible(true);
        add(js, BorderLayout.CENTER);
    }

    public void refresh() {
        tableModel.setData(communicator.getBestand());
        revalidate();
        repaint();
    }

    public BestandTableModel getTableModel() {
        return tableModel;
    }
}