package thw.edu.javaII.port.warehouse.model;

import java.io.Serializable;

public class Kunde implements Serializable {
    private static final long serialVersionUID = 1L;
    private int id;
    private String name;
    private String lieferadresse;
    private String rechnungsadresse;
    private static final String PRINT_FORMAT = "[%-10s - %-30s - %-50s - %-50s]";
    public static final int columnCount = 4;

    public Kunde() {
    }

    public Kunde(int id, String name, String lieferadresse, String rechnungsadresse) {
        this.id = id;
        this.name = name;
        this.lieferadresse = lieferadresse;
        this.rechnungsadresse = rechnungsadresse;
    }

    public String toListString() {
        return String.format(PRINT_FORMAT, id, name, lieferadresse, rechnungsadresse);
    }

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getLieferadresse() {
        return lieferadresse;
    }

    public void setLieferadresse(String lieferadresse) {
        this.lieferadresse = lieferadresse;
    }

    public String getRechnungsadresse() {
        return rechnungsadresse;
    }

    public void setRechnungsadresse(String rechnungsadresse) {
        this.rechnungsadresse = rechnungsadresse;
    }

    public Object getValueAtColumn(int column) {
        switch (column) {
            case 0: return getId();
            case 1: return getName();
            case 2: return getLieferadresse();
            case 3: return getRechnungsadresse();
            default: return null;
        }
    }
}