package thw.edu.javaII.port.warehouse.model;

import java.io.Serializable;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;

public class Bestellung implements Serializable {
    private static final long serialVersionUID = 1L;
    private int id;
    private Kunde kunde;
    private List<BestellungProdukt> produkte;
    private Date datum;
    private static final String PRINT_FORMAT = "[%-10s - %-30s - %-50s]";
    public static final int columnCount = 3;

    public Bestellung() {
        this.produkte = new ArrayList<>();
    }

    public Bestellung(int id, Kunde kunde, Date datum, List<BestellungProdukt> produkte) {
        this.id = id;
        this.kunde = kunde;
        this.produkte = produkte != null ? produkte : new ArrayList<>();
        this.datum = datum;
    }



	public String toListString() {
        return String.format(PRINT_FORMAT, id, kunde.getName(), datum.toString());
    }

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public Kunde getKunde() {
        return kunde;
    }

    public void setKunde(Kunde kunde) {
        this.kunde = kunde;
    }

    public List<BestellungProdukt> getProdukte() {
        return produkte;
    }

    public void setProdukte(List<BestellungProdukt> produkte) {
        this.produkte = produkte;
    }

    public Date getDatum() {
        return datum;
    }

    public void setDatum(Date datum) {
        this.datum = datum;
    }

    public Object getValueAtColumn(int column) {
        switch (column) {
            case 0: return getId();
            case 1: return getKunde().getName();
            case 2: return getDatum().toString();
            default: return null;
        }
    }
}