package thw.edu.javaII.port.warehouse.server;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

import thw.edu.javaII.port.warehouse.model.common.Info;

public class Server {
	public static boolean run = true;
	
	public static void main(String[] args) {
		///TODO Fehler beim Init hier gibt es wohl eine Dopplung
		///TODO Fehler beim Suchen in der Verwaltungs UI
		ServerSocket server = null;
		try {		
			server = new ServerSocket(Info.PORT_SERVER);
			System.out.println("Lagerverwaltungsserver l√§uft");
			while (run) {
				Socket sock = server.accept();
				new Service(sock).start();
			}
		}  catch (IOException e) {
			e.printStackTrace();
		} finally {
			if (server != null) {
				try {
					server.close();
				} catch (IOException e) {
					;
				}
			}
		}
	}
	
}
